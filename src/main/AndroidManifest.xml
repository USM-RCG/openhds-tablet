<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.openhds.mobile"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <provider
            android:name=".provider.OpenHDSProvider"
            android:authorities="org.openhds.Application"
            android:exported="false"/>

        <uses-library android:name="com.google.android.maps"/>

        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".activity.PreferenceActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".activity.HierarchyNavigatorActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activity.SupervisorActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activity.FieldWorkerActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".activity.EntitySearchActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="org.cims_bioko.ENTITY_SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SearchableActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".activity.SearchableActivity" />

        <service android:name=".syncadpt.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator"/>
        </service>
        <service
            android:name=".syncadpt.SyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter"/>
        </service>
        <service
            android:name=".search.IndexingService"
            android:exported="false">
        </service>

    </application>

</manifest>