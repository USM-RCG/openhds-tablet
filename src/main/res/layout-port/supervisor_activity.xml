<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="portrait">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/supervisor_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:layout_margin="@dimen/port_supervisor_pane_spacing"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/supervisor_sync_fragment"
            android:name="org.cimsbioko.fragment.SyncDatabaseFragment"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/supervisor_sync_history_fragment"
            android:name="org.cimsbioko.fragment.SyncHistoryFragment"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/port_supervisor_pane_spacing"
            android:layout_marginStart="@dimen/port_supervisor_pane_spacing"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginStart="@dimen/port_supervisor_pane_spacing"
        android:layout_marginLeft="@dimen/port_supervisor_pane_spacing"
        android:layout_marginRight="@dimen/port_supervisor_pane_spacing"
        android:layout_marginEnd="@dimen/port_supervisor_pane_spacing"
        android:layout_marginBottom="@dimen/port_supervisor_pane_spacing"
        android:layout_weight="5"
        android:baselineAligned="false">

        <FrameLayout
            style="@style/SupervisorMiddleColumn"
            android:layout_weight="1">
            <fragment
                android:id="@+id/supervisor_action_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="org.cimsbioko.fragment.SupervisorActionFragment"/>
        </FrameLayout>

        <fragment
            android:id="@+id/supervisor_checklist_fragment"
            android:name="org.cimsbioko.fragment.ChecklistFragment"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/port_supervisor_pane_spacing"
            android:layout_marginStart="@dimen/port_supervisor_pane_spacing"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>