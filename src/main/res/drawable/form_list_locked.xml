<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/form_corner_radius"/>
                    <padding android:bottom="@dimen/form_tb_padding" android:left="@dimen/form_lr_padding" android:right="@dimen/form_lr_padding" android:top="@dimen/form_tb_padding"/>
                    <solid android:color="@color/RedOrange" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/padlock" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/form_corner_radius"/>
                    <padding android:bottom="@dimen/form_tb_padding" android:left="@dimen/form_lr_padding" android:right="@dimen/form_lr_padding" android:top="@dimen/form_tb_padding"/>
                    <solid android:color="@color/LightRedOrange" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/padlock" android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>