<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
        <item android:state_pressed="true">
                <shape android:shape="rectangle" >
                        <corners android:radius="@dimen/button_corner_radius"/>
                        <padding android:top="@dimen/button_padding" android:right="@dimen/button_padding" android:bottom="@dimen/button_padding" android:left="@dimen/button_padding"/>
                        <solid android:color="@color/LightGreen"/>
                        <stroke android:width="@dimen/button_border_width" android:color="@color/DarkGreen"/>
                </shape>
        </item>
        <item android:state_pressed="false">
                <shape android:shape="rectangle" >
                        <corners android:radius="@dimen/button_corner_radius"/>
                        <padding android:top="@dimen/button_padding" android:right="@dimen/button_padding" android:bottom="@dimen/button_padding" android:left="@dimen/button_padding"/>
                        <solid android:color="@color/Green"/>
                        <stroke android:width="@dimen/button_border_width" android:color="@color/DarkGreen"/>
                </shape>
        </item>

</selector>
