<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius"/>
            <padding android:top="@dimen/button_padding" android:right="@dimen/button_padding" android:bottom="@dimen/button_padding" android:left="@dimen/button_padding"/>
            <solid android:color="@color/LightYellow"/>
            <stroke android:width="@dimen/button_border_width" android:color="@color/DarkYellow"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius"/>
            <padding android:top="@dimen/button_padding" android:right="@dimen/button_padding" android:bottom="@dimen/button_padding" android:left="@dimen/button_padding"/>
            <solid android:color="@color/Yellow"/>
            <stroke android:width="@dimen/button_border_width" android:color="@color/DarkYellow"/>
        </shape>
    </item>

</selector>
