<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/progress_container"
        style="@style/ProgressBarContainer">
        <ProgressBar style="@style/ProgressBar" />
        <TextView style="@style/ProgressCaption" android:text="@string/searching" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/basic_query_text"
            style="@style/SearchBox" />

        <EditText
            android:id="@+id/advanced_query_text"
            style="@style/SearchBox"
            android:visibility="gone" />

        <ToggleButton
            android:id="@+id/hierarchy_toggle"
            style="@style/SearchToggle"
            android:layout_toLeftOf="@+id/location_toggle"
            android:layout_toStartOf="@+id/location_toggle" />

        <ToggleButton
            android:id="@+id/location_toggle"
            style="@style/SearchToggle"
            android:layout_toLeftOf="@+id/individual_toggle"
            android:layout_toStartOf="@+id/individual_toggle" />

        <ToggleButton
            android:id="@+id/individual_toggle"
            style="@style/SearchToggle"
            android:layout_toLeftOf="@+id/search_button"
            android:layout_toStartOf="@+id/search_button" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/search_label" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_button"
            android:layout_marginTop="@dimen/search_results_spacing">

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawSelectorOnTop="false"/>

        </FrameLayout>

    </RelativeLayout>

</FrameLayout>
