<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout android:id="@+id/progress_container"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:visibility="gone"
                  android:gravity="center">

        <ProgressBar style="?android:attr/progressBarStyleLarge"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:text="@string/searching"
                  android:paddingTop="4dip"
                  android:singleLine="true" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/basic_query_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/hierarchy_toggle"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/search_button"
            android:layout_alignParentLeft="true"
            android:hint="@string/search_hint"
            android:maxLines="1"
            android:inputType="textNoSuggestions"/>

        <EditText
            android:id="@+id/advanced_query_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/hierarchy_toggle"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/search_button"
            android:layout_alignParentLeft="true"
            android:hint="@string/search_hint"
            android:maxLines="1"
            android:inputType="textNoSuggestions"
            android:visibility="gone"/>

        <ToggleButton
            android:id="@+id/hierarchy_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/location_toggle"
            android:layout_toStartOf="@+id/location_toggle"
            android:textAllCaps="false"/>

        <ToggleButton
            android:id="@+id/location_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/individual_toggle"
            android:layout_toStartOf="@+id/individual_toggle"
            android:textAllCaps="false"/>

        <ToggleButton
            android:id="@+id/individual_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/search_button"
            android:layout_toStartOf="@+id/search_button"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/search_label"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_button"
            android:layout_marginTop="5dp">

            <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawSelectorOnTop="false"/>

        </FrameLayout>

    </RelativeLayout>

</FrameLayout>
