<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >


    <Button
            android:layout_marginBottom="20dp"
            android:id="@+id/checklist_fragment_secondary_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/checklist_fragment_primary_button"
            android:layout_toRightOf="@+id/view"
            android:background="@drawable/form_selector"
            android:textColor="@color/White"
            android:textAppearance="@android:style/TextAppearance.Large.Inverse"/>

    <View
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/view"
            android:layout_width="5dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />

    <Button
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/checklist_fragment_primary_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/view"
            android:background="@drawable/form_selector"
            android:textColor="@color/White"
            android:textAppearance="@android:style/TextAppearance.Large.Inverse"/>

    <TextView
            android:id="@+id/checklist_fragment_listview_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textAppearance="@android:style/TextAppearance.Large.Inverse"
            android:background="@drawable/form_list_header"/>

    <ListView
            android:id="@+id/checklist_fragment_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/checklist_fragment_listview_header"
            android:dividerHeight="5dp"
            android:divider="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_above="@+id/checklist_fragment_primary_button"/>


</RelativeLayout>