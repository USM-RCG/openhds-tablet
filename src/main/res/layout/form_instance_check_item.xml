<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_instance_check_item_orange"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/form_instance_item_area"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">
        <include layout="@layout/form_instance_list_item" />
    </FrameLayout>

    <CheckBox
        android:id="@+id/form_instance_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/instance_checkbox_padding"
        android:focusable="false"
        android:saveEnabled="false" />

</LinearLayout>