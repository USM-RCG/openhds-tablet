<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fieldWorkerLoginFragment"
        android:name="org.openhds.mobile.fragment.FieldWorkerLoginFragment"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_gravity="center"
        android:layout_margin="70dp"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/supervisorLoginFragment"
        android:name="org.openhds.mobile.fragment.SupervisorLoginFragment"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_gravity="center"
        android:layout_margin="70dp"
        android:layout_weight="4" />

</LinearLayout>