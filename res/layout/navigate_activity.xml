<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/left_column"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/AcidGray"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <FrameLayout
            android:id="@+id/left_column_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/AcidGray" />

        <FrameLayout
            android:id="@+id/left_column_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/AcidGray"
            android:paddingTop="20dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/middle_column"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@color/DarkerAcidGray"
        android:paddingTop="20dp" />

    <LinearLayout
        android:id="@+id/right_column"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@color/AcidGray"
        android:orientation="vertical"
        android:paddingTop="20dp" >

        <FrameLayout
            android:id="@+id/right_column_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/AcidGray" />

        <FrameLayout
            android:id="@+id/right_column_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/AcidGray"
            android:paddingTop="20dp" />
    </LinearLayout>

</LinearLayout>