      <instance>
        <data id="deathToHOHform">
          <start/>
          <end/>
          <deviceId/>
          <processedByMirth/>
          <interviewDate/>
          <householdId/>
          <fieldWorkerId/>
          <visitId/>
          <individualId/>
          <numHHmembers/>
          <newHOHId/>
          <newHOHFirstName/>
          <newHOHMiddleName/>
          <newHOHLastName/>
          <newHOHdob/>
          <member jr:template="">
            <position/>
            <mindividualId/>
            <memberFirstName/>
            <memberMiddleName/>
            <memberLastName/>
            <memberDob/>
            <relationToNewHead/>
          </member>
          <meta>
            <instanceID/>
          </meta>
        </data>
      </instance>
			<bind nodeset="/data/processedByMirth" type="boolean" />
			<bind nodeset="/data/start" type="string"/> 
			<bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/data/end" type="dateTime"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/data/deviceId" type="string"/>
      <bind jr:preload="date" jr:preloadParams="today" nodeset="/data/interviewDate" type="date"/>
      <bind nodeset="/data/householdId" required="true()" type="string" readonly="true()"/>
      <bind nodeset="/data/fieldWorkerId" required="true()" type="string" readonly="true()"/>
      <bind nodeset="/data/visitId" required="true()" type="string" readonly="true()"/>
      <bind nodeset="/data/individualId" required="true()" type="string" readonly="true()"/>
      <bind nodeset="/data/numHHmembers" required="true()" type="int"/>
      <bind constraint="regex(.,'^[A-Z]{3}[0-9]{9}$')" jr:constraintMsg="Fuata muundo uliotolewa kama mfano. Herufi 3 za UPPERCASE ikifuatiwa na namba 9" nodeset="/data/newHOHId" relevant="/data/numHHmembers&gt;=1" required="true()" type="string"/>
      <bind nodeset="/data/newHOHFirstName" relevant="/data/numHHmembers&gt;=1" required="true()" type="string"/>
      <bind nodeset="/data/newHOHMiddleName" relevant="/data/numHHmembers&gt;=1" required="true()" type="string"/>
      <bind nodeset="/data/newHOHLastName" relevant="/data/numHHmembers&gt;=1" required="true()" type="string"/>
      <bind nodeset="/data/newHOHdob" relevant="/data/numHHmembers&gt;=1" required="true()" type="date"/>
      <bind nodeset="/data/member" relevant="/data/numHHmembers&gt;=1"/>
      <bind calculate="position(..)" nodeset="/data/member/position" type="string"/>
      <bind constraint="regex(.,'^[A-Z]{3}[0-9]{9}$')" jr:constraintMsg="Fuata muundo uliotolewa kama mfano. Herufi 3 za UPPERCASE ikifuatiwa na namba 9" nodeset="/data/member/mindividualId" relevant="/data/member/position&lt;=/data/numHHmembers" required="true()" type="string"/>
      <bind nodeset="/data/member/memberFirstName" relevant="/data/member/position&lt;=/data/numHHmembers" required="true()" type="string"/>
      <bind nodeset="/data/member/memberMiddleName" relevant="/data/member/position&lt;=/data/numHHmembers" required="true()" type="string"/>
      <bind nodeset="/data/member/memberLastName" relevant="/data/member/position&lt;=/data/numHHmembers" required="true()" type="string"/>
      <bind nodeset="/data/member/memberDob" relevant="/data/member/position&lt;=/data/numHHmembers" required="true()" type="date"/>
      <bind nodeset="/data/member/relationToNewHead" relevant="/data/member/position&lt;=/data/numHHmembers" required="true()" type="select1"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/data/householdId">
