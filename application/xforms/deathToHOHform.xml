    </input>
    <input ref="/data/newHOHdob">
      <label ref="jr:itext('/data/newHOHdob:label')"/>
    </input>
    <group ref="/data/member">
      <label ref="jr:itext('/data/member:label')"/>
      <repeat jr:count="/data/numHHmembers" nodeset="/data/member">
        <input ref="/data/member/mindividualId">
          <label ref="jr:itext('/data/member/mindividualId:label')"/>
          <hint ref="jr:itext('/data/member/mindividualId:hint')"/>
        </input>
        <input ref="/data/member/memberFirstName">
          <label ref="jr:itext('/data/member/memberFirstName:label')"/>
        </input>
        <input ref="/data/member/memberMiddleName">
          <label ref="jr:itext('/data/member/memberMiddleName:label')"/>
        </input>
        <input ref="/data/member/memberLastName">
          <label ref="jr:itext('/data/member/memberLastName:label')"/>
        </input>
        <input ref="/data/member/memberDob">
          <label ref="jr:itext('/data/member/memberDob:label')"/>
        </input>
        <select1 ref="/data/member/relationToNewHead">
          <label ref="jr:itext('/data/member/relationToNewHead:label')"/>
          <item>
            <label>Spouse</label>
            <value>2</value>
          </item>
          <item>
            <label>Son/Daughter</label>
            <value>3</value>
          </item>
          <item>
            <label>Brother/Sister</label>
            <value>4</value>
          </item>
          <item>
            <label>Parent</label>
            <value>5</value>
          </item>
          <item>
            <label>Grandchild</label>
            <value>6</value>
          </item>
          <item>
            <label>Not Related</label>
            <value>7</value>
          </item>
          <item>
            <label>Other Relative</label>
            <value>8</value>
          </item>
          <item>
            <label>Don't Know</label>
            <value>9</value>
          </item>
        </select1>
      </repeat>
    </group>
  </h:body>
