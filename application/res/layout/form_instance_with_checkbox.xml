<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/form_instance_list_item_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:background="@drawable/form_list_drawable"
                android:paddingTop="5dp" >

    <TextView
            android:id="@+id/form_instance_list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Form Type"
            android:textAppearance="@android:style/TextAppearance.Large.Inverse" />

    <TextView
            android:id="@+id/form_instance_list_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:layout_below="@id/form_instance_list_type"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

    <CheckBox
            android:id="@+id/form_instance_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:saveEnabled="false"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            />

</RelativeLayout>
