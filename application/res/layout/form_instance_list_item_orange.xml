<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/form_instance_list_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_list_drawable_orange"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

        <TextView
                android:id="@+id/form_instance_list_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:text="Form Type"
                android:textAppearance="@android:style/TextAppearance.Large.Inverse"/>

        <TextView
                android:id="@+id/form_instance_list_filename"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="File Name"
                android:layout_below="@id/form_instance_list_type"
                android:textAppearance="@android:style/TextAppearance.Large.Inverse" />

</RelativeLayout>
