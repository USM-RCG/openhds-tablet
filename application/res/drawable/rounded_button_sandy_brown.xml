<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/SandyBrown" />
            <gradient android:angle="-90" android:startColor="@color/SandyBrown" android:endColor="@color/SandyBrownDark"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/SandyBrown" />
            <solid android:color="@color/SandyBrown"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/SandyBrown" />
            <gradient android:angle="-90" android:startColor="@color/SandyBrownDark" android:endColor="@color/SandyBrown" />
        </shape>
    </item>
</selector>